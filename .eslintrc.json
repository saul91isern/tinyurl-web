{
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "fp",
    "import",
    "react",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "_.+"
      }
    ],
    "react/prop-types": [
      1
    ],
    "react/no-unused-prop-types": [
      "warn",
      {
        "customValidators": [],
        "skipShapeProps": true
      }
    ],
    "react/prefer-es6-class": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "import/export": "warn",
    "import/first": "warn",
    "import/order": "warn",
    "fp/no-let": "error",
    "fp/no-mutation": [
      "error",
      {
        "allowThis": true,
        "commonjs": true,
        "exceptions": [
          {
            "property": "current"
          },
          {
            "property": "defaultProps"
          },
          {
            "property": "propTypes"
          }
        ]
      }
    ],
    "no-var": "warn",
    "no-undef": "error",
    "no-param-reassign": "error",
    "quotes": [
      "error",
      "double"
    ]
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}